<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:id="@+id/currentWeatherViewDataRowCity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="区域" />

            <TextView
                android:id="@+id/currentWeatherViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowRequestedDateTime">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:text="データ取得時刻" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/currentWeatherViewRequestedDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp" />
                <TextView
                    android:id="@+id/currentWeatherViewFromCache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_vertical"
                    android:text="(キャッシュされています)" />
            </LinearLayout>
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowObservationDateTime">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="観測時刻" />

            <TextView
                android:id="@+id/currentWeatherViewObservationDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowObservationAddress">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:text="観測地点" />
            <TextView
                android:id="@+id/currentWeatherViewObservationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowWeatherMain">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:text="天候" />

            <LinearLayout
                android:id="@+id/currentWeatherViewDataRowWeatherSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/currentWeatherViewWeatherSymbolImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/currentWeatherViewWeatherDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="晴れ" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="気温:" />

                    <TextView
                        android:id="@+id/currentWeatherViewTemparature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="20.0℃ (22.0℃/12.0℃)" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="湿度:" />

                    <TextView
                        android:id="@+id/currentWeatherViewHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="15.0%" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currentWeatherViewWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="北西の風、風速5.0m/s" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="体感温度:" />

                    <TextView
                        android:id="@+id/currentWeatherViewFeelsLinkTemparature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="15.0℃" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowPressure">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="気圧" />

            <TextView
                android:id="@+id/currentWeatherViewPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="990.0hPa (現地気圧: 990.0hPa、海面気圧：990.0hPa)" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowCloudiness">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="雲量" />

            <TextView
                android:id="@+id/currentWeatherViewCloudiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10.0%" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowRainFall">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="降雨量" />

            <TextView
                android:id="@+id/currentWeatherViewRainFall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="過去1時間: 15.0mm、過去3時間: 20.0mm" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowSnowFall">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:text="降雪量" />

            <TextView
                android:id="@+id/currentWeatherViewSnowFall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="過去1時間: 15.0mm、過去3時間: 20.0mm" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowSunriseSunset1">
            <TextView
                android:id="@+id/currentWeatherViewWeatherSunriseOrSunsetLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:text="日の入り" />
            <TextView
                android:id="@+id/currentWeatherViewWeatherSunriseOrSunset1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp" />
        </TableRow>

        <TableRow android:id="@+id/currentWeatherViewDataRowSunriseSunset2">
            <TextView
                android:id="@+id/currentWeatherViewWeatherSunriseOrSunsetLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"
                android:text="日の出" />
            <TextView
                android:id="@+id/currentWeatherViewWeatherSunriseOrSunset2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp" />
        </TableRow>
    </TableLayout>
</merge>